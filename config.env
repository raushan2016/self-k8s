# ==============================================================================
# PROJECT CONFIGURATION
# ==============================================================================
# GCP Project ID (Leave empty to use default from gcloud config)
PROJECT_ID="raushankr-gke-dev"
REGION="us-central1"
ZONE="us-central1-a"

# Resource Prefix to avoid collisions in shared projects
RESOURCE_PREFIX="rk8s"

# ==============================================================================
# NETWORK CONFIGURATION
# ==============================================================================
NETWORK_NAME="${RESOURCE_PREFIX}-vpc"
SUBNET_NAME="${RESOURCE_PREFIX}-subnet"
SUBNET_RANGE="10.240.0.0/24"
POD_CIDR="10.200.0.0/16"
SERVICE_CIDR="10.32.0.0/24"

# ==============================================================================
# COMPUTE CONFIGURATION
# ==============================================================================
# Image to build/use
IMAGE_FAMILY="ubuntu-2204-lts"
IMAGE_PROJECT="raushankr-gke-dev"
CUSTOM_IMAGE_NAME="${RESOURCE_PREFIX}-custom-image-v1"
CUSTOM_IMAGE_FAMILY="${RESOURCE_PREFIX}-custom"

# VM Specs
CONTROL_PLANE_NAME="${RESOURCE_PREFIX}-control-plane"
WORKER_NAME_PREFIX="${RESOURCE_PREFIX}-worker"
WORKER_COUNT=2
MACHINE_TYPE="e2-standard-4"
BOOT_DISK_SIZE="50GB"

# ==============================================================================
# KUBERNETES CONFIGURATION
# ==============================================================================
# Versions
KUBERNETES_VERSION="v1.29"      # For apt repo
KUBERNETES_FULL_VERSION="v1.29.0" # For kubeadm init
CILIUM_CLI_VERSION="v0.15.0"
CILIUM_VERSION="1.14.5"
CNI_PLUGINS_VERSION="v1.4.0"
